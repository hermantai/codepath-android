<?xml version="1.0" encoding="utf-8"?>
<com.htaihm.simpletodo.TodoItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemTextDisplay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="Todo item text"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvItemPriorityDisplay"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@id/tvItemTextDisplay"
        android:layout_toStartOf="@id/tvItemTextDisplay"
        android:textStyle="bold"
        tools:text="Todo item priority"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvItemCreatedTimeDisplay"
        android:layout_below="@id/tvItemTextDisplay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="Todo item created time"
        android:textColor="@android:color/darker_gray" />
</com.htaihm.simpletodo.TodoItemView>